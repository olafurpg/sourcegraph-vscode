{
  "name": "sourcegraph",
  "displayName": "Sourcegraph",
  "description": "Sourcegraph for VS Code",
  "version": "1.0.16",
  "publisher": "sourcegraph",
  "license": "MIT",
  "icon": "images/logo.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/sourcegraph/sourcegraph-vscode.git"
  },
  "engines": {
    "vscode": "^1.52.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onFileSystem:sourcegraph",
    "onLanguage:sourcegraph",
    "onView:sourcegraph",
    "onCommand:extension.browse",
    "onCommand:extension.open",
    "onCommand:extension.search"
  ],
  "main": "./out/extension",
  "contributes": {
    "languages": [{
      "id": "sourcegraph",
      "aliases": [
        "Sourcegraph",
        "sourcegraph"
      ],
      "extensions": [
        ".sourcegraph"
      ],
      "//": "TODO: experiment with adding an iconFont like here https://github.com/microsoft/vscode/issues/114942#issuecomment-773457375",
      "configuration": "./language-configuration.json"
    }],
    "viewsWelcome": [
      {"view": "sourcegraph.files", "contents": "[Browse](command:extension.browse)"}
    ],
    "commands": [
      {
        "command": "extension.browse",
        "title": "Sourcegraph: Browse"
      },
      {
        "command": "extension.searchInEditor",
        "title": "Sourcegraph: Search in editor"
      },
      {
        "command": "extension.openFile",
        "title": "Sourcegraph: Open File"
      },
      {
        "command": "extension.open",
        "title": "Sourcegraph: Open"
      },
      {
        "command": "extension.search",
        "title": "Sourcegraph: Search"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "sourcegraph-view",
          "title": "Sourcegraph",
          "icon": "images/logo.png"
        }
      ]
    },
    "views": {
      "sourcegraph-view": [
        {
          "id": "sourcegraph.files",
          "name": "Files"
        }
      ]
    },
    "keybindings": [
      {
        "command": "extension.open",
        "key": "alt+a",
        "mac": "alt+a",
        "when": "editorFocus"
      },
      {
        "command": "extension.search",
        "key": "alt+s",
        "mac": "alt+s",
        "when": "editorFocus"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Sourcegraph",
      "properties": {
        "sourcegraph.url": {
          "type": [
            "string"
          ],
          "default": "https://sourcegraph.com",
          "description": "The base URL of the Sourcegraph instance to use."
        },
        "sourcegraph.remoteUrlReplacements": {
          "type": [
            "object"
          ],
          "default": {},
          "description": "For each item in this object, replace key with value in the remote url."
        },
        "sourcegraph.defaultBranch": {
          "type": [
            "string"
          ],
          "default": "",
          "description": "Always open files at this default branch."
        },
        "sourcegraph.recentlyBrowsedFiles": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "markdownDescription": "Files that have been opened through the 'Browse' command"
        }
      }
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "release": {
    "verifyConditions": [
      "semantic-release-vsce",
      "@semantic-release/github"
    ],
    "prepare": {
      "path": "semantic-release-vsce",
      "packageVsix": "sourcegraph-vscode.vsix"
    },
    "publish": [
      "semantic-release-vsce",
      {
        "path": "@semantic-release/github",
        "assets": "sourcegraph-vscode.vsix"
      }
    ]
  },
  "scripts": {
    "semantic-release": "semantic-release",
    "prettier": "prettier \"**/*.{ts,js,json,md,yml}\" --list-different --write",
    "prettier-check": "npm run prettier -- --write=false",
    "eslint": "eslint 'src/**/*.ts'",
    "build": "tsc -p .",
    "watch": "tsc -w -p .",
    "test": "TS_NODE_COMPILER_OPTIONS='{\"module\":\"commonjs\"}' nyc mocha --require source-map-support/register --package package.json"
  },
  "nyc": {
    "require": "ts-node/register",
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "**/*.test.ts"
    ],
    "extension": [
      ".ts"
    ]
  },
  "mocha": {
    "recursive": true,
    "timeout": 200,
    "watch-extensions": [
      "ts"
    ],
    "require": "ts-node/register",
    "spec": "src/**/*.test.ts"
  },
  "devDependencies": {
    "@commitlint/cli": "^13.1.0",
    "@commitlint/config-conventional": "^13.1.0",
    "@sourcegraph/eslint-config": "^0.23.0",
    "@sourcegraph/prettierrc": "^3.0.3",
    "@sourcegraph/tsconfig": "^4.0.1",
    "@types/node": "14.17.15",
    "@types/shelljs": "^0.8.9",
    "@types/vscode": "1.52.0",
    "eslint": "^7.32.0",
    "husky": "^4.3.6",
    "nyc": "^15.1.0",
    "prettier": "^2.2.1",
    "semantic-release": "^17.3.0",
    "semantic-release-vsce": "^3.0.1",
    "typescript": "^4.1.3",
    "vsce": "^1.81.1"
  },
  "dependencies": {
    "@types/mocha": "8.2.0",
    "execa": "^5.0.0",
    "got": "^11.8.2",
    "mocha": "^8.3.0",
    "node-fetch": "^3.0.0",
    "open": "^7.3.0",
    "shelljs": "^0.8.4",
    "ts-node": "^9.1.1"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -e $HUSKY_GIT_PARAMS"
    }
  }
}
